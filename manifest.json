{
  "name": "Splocker Beta",
  "version": "0.0.0.1",
  "description": "Block Spoilers for Hot Movies and Tv shows!",
  "permissions": ["activeTab", "declarativeContent", "storage", "<all_urls>"],
  "options_page": "options.html",
  "background":{
    "scripts": ["jquery.min.js","lodash.min.js","background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
         "jquery.min.js",
         "lodash.min.js",
         "content.js",
         "spoilers/endgame.js",
         "spoilers/game_of_thrones.js",
         "spoilers/manifest.js"
      ]
    }
  ],
  "default_icons": {
    "16": "images/splocker_icon16.png",
    "32": "images/splocker_icon32.png",
    "48": "images/splocker_icon48.png",
    "128": "images/splocker_icon128.png"
  },
  "icons": {
    "16": "images/splocker_icon16.png",
    "32": "images/splocker_icon32.png",
    "48": "images/splocker_icon48.png",
    "128": "images/splocker_icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "128": "images/splocker_icon128.png"
    },
    "default_title": "Splocker Menu",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}